<%- include('header') -%>

    <div class="box" id="heading">
        <h1><%= listTitle %></h1>
    </div>

    <div class="box">
        
        <% newListItems.forEach(function(newListItem){ %>
        <form action="/delete" class="itemDelete" method="post">  
            <div class="item">
                <input type="checkbox" name="deleteItemCheck" value="<%= newListItem.id %>" onchange="this.form.submit()">
                <p name="itemListed"><%= newListItem.name %></p>
            </div>   
            <input type="hidden" name="listName" value="<%= listTitle %>" >
        </form>
        <% }) %>
            

            <form action="/" class="item" method="post">
                <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
                <button type="submit" name="list" value=<%= listTitle %> >+</button>
            </form>
    </div>

<%- include('footer') -%>
    
